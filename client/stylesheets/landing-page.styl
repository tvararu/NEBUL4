@import url(http://fonts.googleapis.com/css?family=Orbitron:400,500,700,900);

html, body
  width: 100%
  height: 100%

body
  background: url('/img/allofthoseplanets.jpg') no-repeat center center fixed;
  background-size: cover
  position: relative
  font-family: 'Orbitron', Helvetica Neue, sans-serif

.title-block
  font-size: 100px
    
  @media (max-width: 700px)
    font-size: 50px
  
  width: 100%
  height: 1em
  
  // Center .title-block vertically.
  position: absolute
  top: 50%
  -webkit-transform: translateY(-50%)
  transform: translateY(-50%)
  
  h1:nth-child(1)
    top: -1.5em
    font-weight: 400
  h1:nth-child(2)
    top: -0.5em
    font-weight: 500
  h1:nth-child(3)
    top: 0.5em
    font-weight: 700
  h1:nth-child(4)
    top: 1.5em
    font-weight: 900
  
  h1
    font-size: 1em
    color: #eee
    margin: 0
    text-shadow: 1px 1px 2px #222
    
    // Center h1s horizontally.
    position: absolute
    left: 50%
    -webkit-transform: translateX(-50%)
    transform: translateX(-50%)
    
    opacity: 0
    
    // Align our little 4 better.
    .letter-four
      margin-left: 0.05em
      margin-right: 0.05em
  
  .subtitle a
    width: 100%
    font-size: 0.25em
    color: #ccc
    width: 100%
    display: block
    text-align: center

    // Align it correctly.
    position: absolute
    top: 8em
    opacity: 0
    
    // Reset default link styling.
    &:focus, &:hover
      color: #ccc
  
  &.animate
    firstAnimDuration = 1s
    firstAnimDelay = 1s

    secondAnimDuration = 1s
    secondAnimDelay = (firstAnimDelay + firstAnimDuration)
  
    cubicEasing = cubic-bezier(.10, .70, .20, 1)
  
    h1:nth-child(1), h1:nth-child(3), h1:nth-child(4)
      // h1s 1, 3 and 4 get shown and then hidden again while moving.
      -webkit-animation: show firstAnimDuration firstAnimDelay ease forwards, fold secondAnimDuration secondAnimDelay cubicEasing forwards, hide secondAnimDuration secondAnimDelay cubicEasing forwards
      animation: show firstAnimDuration firstAnimDelay ease forwards, fold secondAnimDuration secondAnimDelay cubicEasing forwards, hide secondAnimDuration secondAnimDelay cubicEasing forwards
    h1:nth-child(2)
      // The second h1 doesn't get hidden.
      -webkit-animation: show firstAnimDuration firstAnimDelay ease forwards, fold secondAnimDuration secondAnimDelay cubicEasing forwards
      animation: show firstAnimDuration firstAnimDelay ease forwards, fold secondAnimDuration secondAnimDelay cubicEasing forwards
  
    .subtitle a
      subtitleAnimDelay = (secondAnimDelay + secondAnimDuration)
      -webkit-animation: show firstAnimDuration subtitleAnimDelay ease forwards
      animation: show firstAnimDuration subtitleAnimDelay ease forwards

// Animation declarations.
@keyframes show
  0%
    opacity: 0
  100%
    opacity: 1

@keyframes fold
  100%
    top: -1em

@keyframes hide
  0%
    opacity: 1
  100%
    opacity: 0